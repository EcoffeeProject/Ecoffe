<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Step4"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/step4_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:text="음료 선택"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/step4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/americano_img"
        android:layout_width="69dp"
        android:layout_height="116dp"
        app:layout_constraintStart_toEndOf="@+id/step4"
        app:layout_constraintTop_toBottomOf="@+id/choice_info"
        app:srcCompat="@drawable/americano" />

    <ImageView
        android:id="@+id/greenlatte_img"
        android:layout_width="69dp"
        android:layout_height="116dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toEndOf="@+id/caffelatte_img"
        app:layout_constraintTop_toBottomOf="@+id/choice_info"
        app:srcCompat="@drawable/greenlatte" />

    <ImageView
        android:id="@+id/caffelatte_img"
        android:layout_width="69dp"
        android:layout_height="116dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toEndOf="@+id/americano_img"
        app:layout_constraintTop_toBottomOf="@+id/choice_info"
        app:srcCompat="@drawable/latte" />

    <TextView
        android:id="@+id/americano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="아메리카노"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/americano_img"
        app:layout_constraintStart_toStartOf="@+id/americano_img"
        app:layout_constraintTop_toBottomOf="@+id/americano_img" />

    <TextView
        android:id="@+id/caffelatte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="카페라떼"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/caffelatte_img"
        app:layout_constraintStart_toStartOf="@+id/caffelatte_img"
        app:layout_constraintTop_toBottomOf="@+id/caffelatte_img" />

    <TextView
        android:id="@+id/greenlatte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="녹차라떼"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/greenlatte_img"
        app:layout_constraintStart_toStartOf="@+id/greenlatte_img"
        app:layout_constraintTop_toBottomOf="@+id/greenlatte_img" />
    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/dark_brown_alpha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenlatte" />

    <TextView
        android:id="@+id/choice_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/step4_ment"
        app:layout_constraintTop_toBottomOf="@+id/step4_ment" />

    <TextView
        android:id="@+id/choice_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_brown_alpha"
        android:text=" [선택 완료시 터치]"
        android:textSize="12dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/greenlatte_img"
        app:layout_constraintEnd_toEndOf="@+id/greenlatte_img" />


</androidx.constraintlayout.widget.ConstraintLayout>