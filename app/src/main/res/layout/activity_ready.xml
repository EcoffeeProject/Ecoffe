        app:layout_constraintTop_toTopOf="@+id/tv_ready" />

    <TextView
        android:id="@+id/tv_ready5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중"
        android:textColor="@color/red_brown"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ready4"
        app:layout_constraintEnd_toStartOf="@+id/tv_ready6"
        app:layout_constraintTop_toTopOf="@+id/tv_ready" />

    <TextView
        android:id="@+id/tv_ready6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
