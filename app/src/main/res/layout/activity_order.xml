<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="   주문하기"
        android:textColor="@color/dark_brown"
        android:textSize="35sp"
        android:textStyle="bold"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@color/dark_brown_alpha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentA"
        android:name="com.example.ecoffe.FragmentA"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/view"
        tools:layout="@layout/order_step1"
        android:layout_marginTop="2dp"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentB"
        android:name="com.example.ecoffe.FragmentB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/order_step2"
        android:layout_marginTop="2dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentC"
        android:name="com.example.ecoffe.FragmentC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/order_step3"
        android:layout_marginTop="2dp"
       />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentD"
        android:name="com.example.ecoffe.FragmentD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/order_step4"
        android:layout_marginTop="2dp"
      />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentE"
        android:name="com.example.ecoffe.FragmentE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/order_step5"
        android:layout_marginTop="2dp"
        />


</LinearLayout>

</ScrollView>